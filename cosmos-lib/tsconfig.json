{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["es2015"],
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@main/*": ["src/main/*"],
      "@renderers/*": ["src/main/renderers/*"],
    }
  },
  "include": ["./src/**/*"]
}
